{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run VisionMate Desktop UI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/visionmate/app.py",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "QT_MAC_WANTS_LAYER": "1"
      },
      "stopOnEntry": false
    },
    {
      "name": "Run VisionMate Desktop UI (External Terminal)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/visionmate/app.py",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "externalTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "QT_MAC_WANTS_LAYER": "1"
      }
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}