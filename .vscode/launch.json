{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Visionmate Desktop UI",
      "type": "debugpy",
      "request": "launch",
      "module": "visionmate",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "QT_MAC_WANTS_LAYER": "1",
        "QT_LOGGING_RULES": "*.debug=false;qt.qpa.*=false"
      },
      "stopOnEntry": false
    },
    {
      "name": "Run Visionmate Desktop UI (Debug)",
      "type": "debugpy",
      "request": "launch",
      "module": "visionmate",
      "args": [
        "--log-level",
        "DEBUG"
      ],
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "QT_MAC_WANTS_LAYER": "1",
        "QT_DEBUG_PLUGINS": "1"
      },
      "stopOnEntry": false
    },
    {
      "name": "Run Visionmate Server Mode",
      "type": "debugpy",
      "request": "launch",
      "module": "visionmate",
      "args": [
        "--server-mode"
      ],
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "stopOnEntry": false
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}